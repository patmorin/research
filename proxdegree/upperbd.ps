%!  File "upperbd.ps". 
% Gabriel-max degree paper: figure for upper bound proof.
%%BoundingBox: 12 51 589 549
% Luc Devroye, November 2, 1995
/POINTSIZE 2 def
/LINEWIDTH 1 def
/CIRCLELINEWIDTH 0 def
/IT { /Times-Italic findfont 10 scalefont setfont } def
/SMIT { /Times-Italic findfont 7 scalefont setfont } def
/RM { /Times-Roman findfont 10 scalefont setfont } def
/SMRM { /Times-Roman findfont 7 scalefont setfont } def
/SY { /Symbol findfont 10 scalefont setfont } def




/T { aload pop ysigma mul ymu add exch xsigma mul 
     xmu add exch [ 3 1 roll ] } def
	% transforms [ x y ] and leaves new array.
/arrowlength 8 def
/arrow  % need point [ x y ] theta (angle pointed to)
  {
  gsave exch aload pop translate rotate
  newpath 0 0 moveto 
	  arrowlength 2 div neg 0 arrowlength 3 mul 4 div neg arrowlength 4 div neg arrowlength neg arrowlength 3 mul 4 div neg curveto
	  arrowlength neg arrowlength 3 mul 4 div lineto
	  arrowlength 3 mul 4 div neg arrowlength 4 div arrowlength 2 div neg 0 0 0 curveto closepath
	  0 setgray fill
  grestore
  } def

% Definitions.

/figure  % as in xmu ymu xsigma ysigma  figure
{
/ysigma exch def
/xsigma exch def
/ymu exch def
/xmu exch def
/theta 60 def
/extend 1.2 def
/radius 1 ysigma mul def   % inner radius
/outerradius radius dup add def
/origin [ 0 0 ] T def

% Draw circles

 % circles
 % big outer circle colored

 newpath
  origin aload pop moveto
  outerradius 0 rmoveto
  origin aload pop outerradius 0 360 arc
  0.95 setgray fill  0 setgray

 % small inner circle colored

 newpath
  origin aload pop moveto
  radius 0 rmoveto
  origin aload pop radius 0 360 arc
  0.8 setgray fill  0 setgray


 % big outer circle stroked

 newpath
  origin aload pop moveto
  outerradius 0 rmoveto
  origin aload pop outerradius 0 360 arc
  0.5 setlinewidth stroke

 % small inner circle

 newpath
  origin aload pop moveto
  radius 0 rmoveto
  origin aload pop radius 0 360 arc
  1 setlinewidth stroke
	     
% sector lines at angles theta apart

gsave
origin aload pop translate
6
   {
   theta rotate
   newpath 
     0 0 moveto radius 0 lineto
      1 setlinewidth stroke
   } repeat
grestore
gsave
origin aload pop translate
6
   {
   theta rotate
   newpath 
     0 0 moveto outerradius extend mul 0 lineto
      0.5 setlinewidth stroke
   } repeat
grestore

 % origin

 newpath
  origin aload pop moveto
  origin aload pop POINTSIZE 0 360 arc
  0 setgray fill

 % origin of small circle

 newpath
  origin aload pop exch outerradius 2 div add exch moveto
  origin aload pop exch outerradius 2 div add exch POINTSIZE 0 360 arc
  0 setgray fill
} def    % pearl

% first draw figure

300 300 120 120 figure

% draw r, R arrows

gsave
origin aload pop exch outerradius 2 div add exch translate
-50 rotate
newpath arrowlength 0 moveto radius arrowlength sub 0 lineto
 0 setlinewidth [ 2 2 ] 2 setdash stroke
radius 2 div 5 moveto gsave 50 rotate IT (r) show grestore
[ 0 0 ] 180 arrow 
[ radius 0 ] 0 arrow
grestore
gsave
origin aload pop translate
140 rotate
newpath arrowlength 0 moveto radius arrowlength sub 0 lineto
 0 setlinewidth [ 2 2 ] 2 setdash stroke
radius 2 div -5 moveto gsave -140 rotate IT (r) show grestore
[ 0 0 ] 180 arrow 
[ radius 0 ] 0 arrow
grestore
gsave
origin aload pop translate
220 rotate
newpath arrowlength 0 moveto outerradius arrowlength sub 0 lineto
 0 setlinewidth [ 2 2 ] 2 setdash stroke
outerradius 0.75 mul -5 moveto gsave -220 rotate IT (R) show grestore
[ 0 0 ] 180 arrow 
[ outerradius 0 ] 0 arrow
grestore

% another circle

 newpath
  origin aload pop moveto
  outerradius 0 rmoveto
  origin aload pop exch outerradius 2 div add exch
    outerradius 2 div 0 360 arc
  0.5 setlinewidth stroke

% arcs for angles

 newpath
  origin aload pop moveto
  radius 0.2 mul 0 rmoveto
  origin aload pop  radius 0.2 mul
    0 -60 arcn
  0.5 setlinewidth stroke
 newpath
  origin aload pop moveto
  radius 0.2 mul 0 rmoveto
  origin aload pop  radius 0.2 mul
    0 60 arc
  0.5 setlinewidth stroke

  gsave
  origin aload pop translate
  radius 0.25 mul /rr exch def  % for drawing
  rr theta 2 div cos mul rr theta 2 div sin mul moveto SY (q) show
	RM (=60) show
  rr theta 2 div cos mul rr theta 2 div sin mul neg moveto SY (q) show
	RM (=60) show
  grestore

showpage
